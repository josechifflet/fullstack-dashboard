{
  "name": "attendance-web",
  "version": "1.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && postcss styles/globals.css -o .next/static/css/globals.css",
    "start": "next start",
    "circular-check": "dpdm --tree --circular --warning ./**/*.{ts,tsx}",
    "prettier-check": "prettier --check ./**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "lint": "yarn prettier-check && next lint && yarn type-check",
    "compile": "graphql-codegen",
    "watch": "graphql-codegen -w"
  },
  "dependencies": {
    "@apollo/client": "^3.7.10",
    "@chakra-ui/icons": "^2.0.17",
    "@chakra-ui/react": "^2.5.1",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@fontsource/inter": "^4.5.15",
    "@fontsource/nunito": "^4.5.12",
    "@reduxjs/toolkit": "^1.9.3",
    "add": "^2.0.6",
    "autoprefixer": "^10.4.13",
    "axios": "^0.27.2",
    "binance-api-node": "^0.12.4",
    "crypto-hash": "^2.0.1",
    "cyarn": "^0.15.2",
    "focus-visible": "^5.2.0",
    "framer-motion": "^10.2.4",
    "graphql": "^16.6.0",
    "graphql-ws": "^5.12.0",
    "https-proxy-agent": "^5.0.1",
    "lightweight-charts": "^4.0.1",
    "next": "12.1.6",
    "next-i18next": "^13.2.2",
    "next-safe": "^3.4.1",
    "nprogress": "^0.2.0",
    "postcss": "^8.4.21",
    "qrcode.react": "^3.1.0",
    "react": "18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "18.2.0",
    "react-icons": "^4.7.1",
    "react-redux": "^8.0.5",
    "redux": "^4.2.1",
    "swr": "^1.3.0",
    "tailwindcss": "^3.2.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/client-preset": "^2.1.1",
    "@types/node": "17.0.39",
    "@types/nprogress": "^0.2.0",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^18.0.28",
    "@types/react-beautiful-dnd": "^13.1.3",
    "dpdm": "^3.12.0",
    "eslint": "8.33.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.8.4",
    "typescript": "4.9.5"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "plugins": [
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  }
}

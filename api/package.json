{
  "name": "nodejs-api",
  "version": "1.0.1",
  "description": "NodeJs Starter Boilerplate With Authentication",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "yarn run typeorm migration:create -d src/db/ormconfig.ts",
    "migration:generate": "yarn run typeorm migration:generate -d src/db/ormconfig.ts --pretty",
    "migration:run": "yarn run typeorm migration:run -d src/db/ormconfig.ts",
    "migration:revert": "yarn run typeorm migration:revert -d src/db/ormconfig.ts",
    "schema:sync": "yarn run typeorm schema:sync -d src/db/ormconfig.ts",
    "seed-db": "yarn ts-node-dev cli/seed-data",
    "migrate": "yarn prisma migrate dev && yarn ts-node-dev cli/seed-data",
    "genkeys": "ts-node-dev cli/gen-keys",
    "reminder": "ts-node-dev cli/reminder",
    "collision-test": "ts-node-dev cli/collision-test",
    "otp-speed": "ts-node-dev cli/otp-speed",
    "match-totps": "ts-node-dev cli/match-totps",
    "dev": "nodemon --exec ts-node-dev src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "circular-check": "dpdm --tree --circular --warning ./**/*.ts",
    "prettier-check": "prettier --check ./**/*.ts",
    "eslint-check": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "lint": "yarn prettier-check && yarn eslint-check && yarn type-check"
  },
  "dependencies": {
    "@apollo/server": "^4.3.2",
    "@prisma/client": "^4.9.0",
    "argon2": "^0.30.3",
    "body-parser": "^1.20.1",
    "bullmq": "^1.90.0",
    "class-validator": "^0.14.0",
    "connect-redis": "6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "device-detector-js": "^3.0.3",
    "dotenv": "^16.0.3",
    "env-var": "^7.3.0",
    "eventemitter3": "^5.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "express-slow-down": "^1.5.0",
    "express-validation": "^4.1.0",
    "express-winston": "^4.2.0",
    "firebase": "^9.16.0",
    "firebase-admin": "^11.5.0",
    "graphql": "^16.6.0",
    "graphql-ws": "^5.12.0",
    "handy-redis": "^2.3.1",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.3",
    "http-status-codes": "^2.2.0",
    "joi": "^17.7.0",
    "jose": "^4.11.2",
    "mongodb": "^5.0.0",
    "mongoose": "^6.9.0",
    "morgan": "^1.10.0",
    "nanoid": "3.3.4",
    "node-forge": "^1.3.1",
    "node-signpdf": "^1.5.0",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.20",
    "otpauth": "^9.0.2",
    "pako": "^2.1.0",
    "pg": "^8.9.0",
    "pug": "^3.0.2",
    "rate-limit-redis": "^2.1.0",
    "redis": "3.1.2",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "toobusy-js": "^0.5.1",
    "ts-node": "^10.9.1",
    "tslog": "^4.7.1",
    "type-graphql": "^2.0.0-beta.1",
    "typeorm": "^0.3.11",
    "typeorm-store": "^2.0.1",
    "winston": "^3.8.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.19",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/eventemitter3": "^2.0.2",
    "@types/express": "^4.17.16",
    "@types/express-session": "^1.17.6",
    "@types/express-slow-down": "^1.3.2",
    "@types/hpp": "^0.2.2",
    "@types/html-to-text": "^9.0.0",
    "@types/jest": "^29.4.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/nodemailer": "^6.4.7",
    "@types/pako": "^2.0.0",
    "@types/pug": "^2.0.6",
    "@types/rate-limit-redis": "^1.7.4",
    "@types/request-ip": "^0.0.37",
    "@types/toobusy-js": "^0.5.2",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "dpdm": "^3.12.0",
    "eslint": "^8.33.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.4.1",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort"
    ],
    "rules": {
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  }
}
